import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;

/*
 * To change this license header, choose License Headers in Project Properties.
 * To change this template file, choose Tools | Templates
 * and open the template in the editor.
 */
/**
 *
 * @author patati
 */
public class TesteMaffetone {

    private Util.Biblioteca biblioteca;

    @Before
    public void inicializar() {
        biblioteca = new Util.Biblioteca();
    }

    @Test
    public void testeMaffetone_1() {
        Assert.assertEquals(132, biblioteca.calculoMaffetoneBasico(48));
        Assert.assertEquals(145, biblioteca.calculoMaffetoneBasico(35));
        
        
        Assert.assertEquals(180-35, biblioteca.calculoMaffetoneMax(35,3));
        Assert.assertEquals(180-35-10, biblioteca.calculoMaffetoneMin(35,3));
        
        Assert.assertEquals(180-27, biblioteca.calculoMaffetoneMax(27,3));
        Assert.assertEquals(180-27-10, biblioteca.calculoMaffetoneMin(27,3));        
        
    }

}
